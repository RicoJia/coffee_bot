<launch>

    <env name="ROSCONSOLE_FORMAT" value="[${severity}] [${time}] ${logger}: ${message}"/>
    <test test-name="turtle_interface_test" pkg="nuturtle_robot" type="turtle_interface_test" time-limit="10.0">
          <rosparam file="$(find nuturtle_description)/config/diff_params.yaml" />
                <remap from="max_wheel_command" to="~max_wheel_command"/>
                 <remap from="max_motor_rot_vel" to="~max_motor_rot_vel"/>
                 <remap from="wheel_radius" to="~wheel_radius"/>
                  <remap from="wheel_base" to="~wheel_base"/>
                  <remap from="encoder_ticks_per_rev" to="~encoder_ticks_per_rev"/>

            <rosparam file="$(find nuturtle_robot)/config/nuturtle_robot_params.yaml"/>
    </test>

    <node name="turtle_interface" pkg="nuturtle_robot" type="turtle_interface" output="screen">
      <rosparam file="$(find nuturtle_description)/config/diff_params.yaml" />
      <remap from="right_wheel_joint" to="~right_wheel_joint"/>
      <remap from="left_wheel_joint" to="~left_wheel_joint"/>
      <remap from="frequency" to="~frequency"/>
      <remap from="max_wheel_command" to="~max_wheel_command"/>
      <remap from="max_motor_rot_vel" to="~max_motor_rot_vel"/>
      <remap from="encoder_ticks_per_rev" to="~encoder_ticks_per_rev"/>
       <remap from="wheel_radius" to="~wheel_radius"/>
    <remap from="wheel_base" to="~wheel_base"/>
    </node>

</launch>
